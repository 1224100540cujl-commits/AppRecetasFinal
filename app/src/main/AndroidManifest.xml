<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecetasApp"
        tools:targetApi="31">

        <!-- SPLASH como pantalla principal -->
        <activity
            android:name="com.recetas.app.ui.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.RecetasApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name="com.recetas.app.ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Register -->
        <activity
            android:name="com.recetas.app.ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp"
            android:windowSoftInputMode="adjustResize" />

        <!-- Home / Main -->
        <activity
            android:name="com.recetas.app.ui.home.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Detail -->
        <activity
            android:name="com.recetas.app.ui.detail.DetailActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Search -->
        <activity
            android:name="com.recetas.app.ui.search.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Favorites -->
        <activity
            android:name="com.recetas.app.ui.favorites.FavoritesActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Add Recipe -->
        <activity
            android:name="com.recetas.app.ui.add.AddRecipeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Edit Recipe -->
        <activity
            android:name="com.recetas.app.ui.add.EditRecipeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Profile -->
        <activity
            android:name="com.recetas.app.ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Edit Profile -->
        <activity
            android:name="com.recetas.app.ui.profile.EditProfileActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Shopping List -->
        <activity
            android:name="com.recetas.app.ui.shopping.ShoppingListActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp" />

        <!-- Categories -->
        <activity
            android:name="com.recetas.app.ui.home.CategoriesActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp" />
        <activity
            android:name=".ui.collections.CollectionsActivity"
            android:exported="false"
            android:theme="@style/Theme.RecetasApp" />
        <activity
            android:name=".ui.notifications.NotificationsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.tags.TagsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.media.RecipeMediaActivity"
            android:exported="false" />

    </application>

</manifest>
